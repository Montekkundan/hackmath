{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "RESEND_API_KEY",
        "NEXT_PUBLIC_APP_URL"
      ],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env",
        "apps/hackmath/.env"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env",
        "apps/hackmath/.env"
      ]
    }
  }
}
